generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LostItem {
  id            String        @id @default(cuid())
  itemName      String   
  category      String
  color         String
  imageUrl      String?
  foundDate     DateTime
  locationFound String
  finderName    String
  finderEmail   String
  roomNumber    String?
  description   String?
  dateReceived  DateTime?
  receiverName  String?
  receiverEmail String?
  status        String   @default("Lost") // Lost, unclaimed, claimed
  keyId         String   @unique 
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  claimRequests ClaimRequest[]
}

model ClaimRequest {
  id            String   @id @default(cuid())
  lostItem      LostItem @relation(fields: [lostItemId], references: [id])
  lostItemId    String
  studentName   String
  studentEmail  String
  studentId     String?  // Made optional
  description   String   // Why they believe the item belongs to them
  status        String   @default("Pending") // Pending, Approved, Rejected
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
